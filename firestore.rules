rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection (for auth system)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow update: if isAdmin(); // Admin can approve companies
    }

    // Applications collection
    match /applications/{document=**} {
      allow read, write, update, delete: if request.auth != null;
      allow create, read: if request.auth == null;
      allow read, write, update, delete: if isAdmin();
    }

    // Messages collection
    match /messages/{messageId} {
      allow read, update: if request.auth != null && request.auth.uid == resource.data.to;
      allow create: if request.auth != null || isAdmin();
    }

    // Gallery collection
    match /gallery/{galleryId} {
      allow read: if true;
      allow write, update, delete: if isAdmin();
    }

    // Testimonials collection
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write, update, delete: if isAdmin();
    }

    // Blog collection
    match /blog/{blogId} {
      allow read: if true; // Everyone can read published posts
      allow write, update, delete: if isAdmin(); // Only admin can manage
    }

    // Default rule
    match /{document=**} {
      allow read, write: if request.auth != null || isAdmin();
      allow read: if request.auth == null;
    }
  }
}
